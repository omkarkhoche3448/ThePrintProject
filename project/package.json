{
  "name": "xerox-wall-frontend",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder build --win --publish never --config electron-builder.js",
    "electron:start": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:package:win": "npm run build && electron-builder build --win --publish never --config electron-builder.js",
    "electron:package:mac": "npm run build && electron-builder build --mac --publish never --config electron-builder.js",
    "electron:package:linux": "npm run build && electron-builder build --linux --publish never --config electron-builder.js"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable-panels": "^1.0.9",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "clsx": "^2.1.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.printproject.dashboard",
    "productName": "Print Project Dashboard",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
